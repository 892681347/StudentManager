<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>StudentManager</display-name>
  <welcome-file-list>
    <welcome-file>pages/loginfirst.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.zyh.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>LoginServlet</servlet-name>
	<url-pattern>/login.do</url-pattern>
	<url-pattern>/code.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>MainServlet</servlet-name>
  	<servlet-class>com.zyh.controller.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>MainServlet</servlet-name>
	<url-pattern>/personinfo.do</url-pattern>
	<url-pattern>/changeinfo.do</url-pattern>
	<url-pattern>/class.do</url-pattern>
	<url-pattern>/upload.do</url-pattern>
	<url-pattern>/refresh.do</url-pattern>
	<url-pattern>/subject.do</url-pattern>
	<url-pattern>/saveCourse.do</url-pattern>
	<url-pattern>/myCourse.do</url-pattern>
	<url-pattern>/mark.do</url-pattern>
	<url-pattern>/eachMark.do</url-pattern>
	<url-pattern>/saveGrades.do</url-pattern>
	<url-pattern>/searchGrades.do</url-pattern>
	<url-pattern>/addStudent.do</url-pattern>
	<url-pattern>/addTeacher.do</url-pattern>
	<url-pattern>/addSubject.do</url-pattern>
  </servlet-mapping>
</web-app>